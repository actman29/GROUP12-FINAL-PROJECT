<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="@string/title_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_marginTop="87dp"
        android:id="@+id/radioTitle"
        android:textSize="26sp"
        android:textColor="@color/colorLightGreen1" />

    <TextView
        android:text="88.5"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="78dp"
        android:gravity="right"
        android:paddingTop="10dp"
        android:id="@+id/radioFrequency"
        android:textSize="55sp"
        android:layout_below="@+id/radioTitle"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/holo_red_light" />

    <TextView
        android:text="MHZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/radioFrequency"
        android:layout_marginTop="78dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp"
        android:id="@+id/freqMhz"
        android:textSize="30sp"
        android:layout_below="@+id/radioTitle"
        android:textColor="@android:color/holo_red_light" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="35dp"
        app:srcCompat="@android:drawable/arrow_up_float"
        android:layout_alignTop="@+id/radioFrequency"
        android:layout_toRightOf="@+id/freqMhz"
        android:layout_marginTop="10dp"
        android:id="@+id/freqUp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="35dp"
        app:srcCompat="@android:drawable/arrow_down_float"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@+id/radioFrequency"
        android:layout_toRightOf="@+id/freqMhz"
        android:id="@+id/freqDown" />

    <Button
        android:text="1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/addPreset1"
        android:layout_below="@+id/radioFrequency"
        android:layout_alignStart="@+id/radioFrequency"
        android:textSize="16sp"
        android:textColor="@color/colorDarkGreen1"
        android:background="@color/colorLightGreen2" />

    <Button
        android:text="2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/addPreset2"
        android:layout_below="@+id/radioFrequency"
        android:layout_toRightOf="@+id/addPreset1"
        android:textSize="16sp"
        android:textColor="@color/colorDarkGreen1"
        android:background="@color/colorLightGreen2" />

    <Button
        android:text="3"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/addPreset3"
        android:layout_below="@+id/radioFrequency"
        android:layout_toRightOf="@+id/addPreset2"
        android:textSize="16sp"
        android:textColor="@color/colorDarkGreen1"
        android:background="@color/colorLightGreen2"/>

    <Button
        android:text="4"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/addPreset4"
        android:layout_below="@+id/addPreset1"
        android:layout_alignStart="@+id/radioFrequency"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorDarkGreen1"
        android:background="@color/colorLightGreen2"/>

    <Button
        android:text="5"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/addPreset5"
        android:layout_below="@+id/addPreset1"
        android:layout_toRightOf="@+id/addPreset4"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorDarkGreen1"
        android:background="@color/colorLightGreen2"/>

    <Button
        android:text="6"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/addPreset6"
        android:layout_below="@+id/addPreset1"
        android:layout_toRightOf="@+id/addPreset5"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorDarkGreen1"
        android:background="@color/colorLightGreen2"/>

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@+id/addPreset4"
        android:layout_alignStart="@+id/addPreset4"
        android:layout_marginTop="16dp"
        android:textOn=""
        android:textOff=""
        android:id="@+id/toggleMute"
        android:background="@drawable/ic_mute" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/toggleMute"
        android:layout_alignRight="@+id/addPreset6"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/addPreset4"
        android:id="@+id/volumeBar"
        android:max="10"
        android:scrollbarSize="10dp" />

</RelativeLayout>