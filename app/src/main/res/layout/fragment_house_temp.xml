<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marklee.group12_final_project.GarageFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/setTempText"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:background="@color/gray"
        android:gravity="center"
        android:text="20"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="81dp"
        app:layout_constraintLeft_toRightOf="@+id/temperatureBar"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.066" />

    <SeekBar
        android:id="@+id/seekTemp"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:max="30"
        android:progress="1"
        app:layout_constraintLeft_toRightOf="@+id/temperatureBar"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/setTempText" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="180dp"
        android:layout_height="360dp"

        android:id="@+id/temperatureBar"

        android:background="@drawable/temperature"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/degreeImg"
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:layout_marginBottom="130dp"
            android:layout_marginLeft="64dp"
            android:layout_marginStart="64dp"
            android:background="@drawable/degree"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"></ImageView>

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/realTempText"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginBottom="56dp"
        android:layout_marginLeft="59dp"
        android:background="@color/gray"
        android:text="20"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/temperatureBar"
        app:layout_constraintLeft_toLeftOf="@+id/temperatureBar"
        android:layout_marginStart="59dp" />

</android.support.constraint.ConstraintLayout>

